{
  "name": "craftcms/commerce-sagepay",
  "description": "Sage Pay integration for Craft Commerce 5.0+",
  "type": "craft-plugin",
  "keywords": [
    "sagepay",
    "sage pay",
    "commerce",
    "craftcms",
    "omnipay",
    "yii2"
  ],
  "license": "MIT",
  "authors": [
    {
      "name": "Pixel & Tonic",
      "homepage": "https://pixelandtonic.com/"
    }
  ],
  "support": {
    "email": "support@craftcms.com",
    "issues": "https://github.com/craftcms/commerce-sagepay/issues?state=open",
    "source": "https://github.com/craftcms/commerce-sagepay",
    "docs": "https://github.com/craftcms/commerce-sagepay",
    "rss": "https://github.com/craftcms/commerce-sagepay/commits/master.atom"
  },
  "require": {
    "php": "^8.2",
    "craftcms/cms": "^5.0.0-beta.6",
    "craftcms/commerce": "^5.0.0-beta.1",
    "craftcms/commerce-omnipay": "^5.0.0",
    "omnipay/sagepay": "^4.0"
  },
  "require-dev": {
    "craftcms/phpstan": "dev-main",
    "craftcms/ecs": "dev-main",
    "craftcms/rector": "dev-main"
  },
  "autoload": {
    "psr-4": {
      "craft\\commerce\\sagepay\\": "src/"
    }
  },
  "scripts": {
    "phpstan": "phpstan --memory-limit=1G",
    "check-cs": "ecs check --ansi",
    "fix-cs": "ecs check --ansi --fix"
  },
  "extra": {
    "name": "Sage Pay for Craft Commerce",
    "handle": "commerce-sagepay"
  },
  "config": {
    "allow-plugins": {
      "yiisoft/yii2-composer": true,
      "craftcms/plugin-installer": true,
      "php-http/discovery": true
    },
    "platform": {
      "php": "8.2"
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}
